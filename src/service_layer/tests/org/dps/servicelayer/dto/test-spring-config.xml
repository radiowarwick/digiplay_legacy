<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:jaxws="http://cxf.apache.org/jaxws"
	xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
http://cxf.apache.org/jaxws
http://cxf.apache.org/schemas/jaxws.xsd">


	<bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource"
		destroy-method="close">
		<property name="driverClassName" value="org.hsqldb.jdbcDriver" />
		<property name="url" value="jdbc:hsqldb:testdb/digiplaynew;shutdown=true" />
		<property name="username" value="SA" />
		<property name="password" value="" />
	</bean>

	<bean id="sessionFactory" class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean">
	    <property name="dataSource">
	        <ref bean="dataSource"/>
	    </property>
	    <property name="configurationClass">
			<value>org.hibernate.cfg.AnnotationConfiguration</value>
		</property>
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect">org.hibernate.dialect.HSQLDialect</prop>
				<prop key="hibernate.cache.provider_class">org.hibernate.cache.NoCacheProvider</prop>
			</props>
		</property>
		<property name="annotatedClasses">
			<list>
				<value>org.dps.servicelayer.dto.Audio</value>
				<value>org.dps.servicelayer.dto.Album</value>
				<value>org.dps.servicelayer.dto.Artist</value>
				<value>org.dps.servicelayer.dto.File</value>
				<value>org.dps.servicelayer.dto.Group</value>
				<value>org.dps.servicelayer.dto.User</value>
				<value>org.dps.servicelayer.dto.CartAudio</value>
				<value>org.dps.servicelayer.dto.Cartset</value>
				<value>org.dps.servicelayer.dto.CartStyle</value>
				<value>org.dps.servicelayer.dto.CartStyleProperty</value>
				<value>org.dps.servicelayer.dto.Cartwall</value>
				<value>org.dps.servicelayer.dto.AudioType</value>
				
			</list>
		</property>
	</bean>
	
	<bean id="transactionManager" class="org.springframework.orm.hibernate3.HibernateTransactionManager">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>
	
	<bean id="hibernateTemplate" class="org.springframework.orm.hibernate3.HibernateTemplate">
	    <property name="sessionFactory">
	        <ref bean="sessionFactory" />
	    </property>
	</bean>
	
	<bean id="audioTest" class="org.dps.servicelayer.dto.AudioTest">
		<property name="audio" ref="audio" />
		<property name="txManager" ref="transactionManager" />
	</bean>
	
	<bean id="albumTest" class="org.dps.servicelayer.dto.AlbumTest"> 
		<property name="album" ref="album" />
		<property name="hibernateTemplate" ref="hibernateTemplate" />
	</bean>
	
	<bean id="artistTest" class="org.dps.servicelayer.dto.ArtistTest">
		<property name="artist" ref="artist" />
		<property name="hibernateTemplate" ref="hibernateTemplate" />
	</bean>
	
	<bean id="groupTest" class="org.dps.servicelayer.dto.GroupTest">
		<property name="group" ref="group" />
		<property name="hibernateTemplate" ref="hibernateTemplate" />
	</bean>
	
	<bean id="userTest" class="org.dps.servicelayer.dto.UserTest">
		<property name="user" ref="user" />
		<property name="hibernateTemplate" ref="hibernateTemplate" />
	</bean>
	
	<bean id="cartsetTest" class="org.dps.servicelayer.dto.CartsetTest">
		<property name="txManager" ref="transactionManager" />
		<property name="cartset" ref="cartset" />
		<property name="testCartsetID" value="20" />
	</bean>

	<!-- DTOs Used for Testing -->

	<bean id="audio" class="org.dps.servicelayer.dto.Audio" >
		<property name="md5" value="XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX" />
		<property name="sampleStart" value="0" />
		<property name="sampleEnd" value="0" />
		<property name="sampleExtro" value="0" />
		<property name="sampleIntro" value="0" />
		<property name="sampleLength" value="0" />
		<property name="fileType" value="raw" />
		<property name="importDate" value="1234567890" />
		<property name="title" value="All the small things" />
		<property name="filename" value="All_the_small_things" />
		<property name="allExecute" value="false" />
		<property name="allRead" value="false" />
		<property name="allWrite" value="true" />
		<property name="groupRead" value="true" />
		<property name="groupWrite" value="false" />
		<property name="groupExecute" value="true" />
		<property name="userExecute" value="true" />
		<property name="userRead" value="true" />
		<property name="userWrite" value="true" />
	</bean>

	<bean id="album" class="org.dps.servicelayer.dto.Album" />

	<bean id="artist" class="org.dps.servicelayer.dto.Artist" />
	
	<bean id="file" class ="org.dps.servicelayer.dto.File" />
	
	<bean id="user" class="org.dps.servicelayer.dto.User" />
	
	<bean id="group" class="org.dps.servicelayer.dto.Group" />
	
	<bean id="cartset" class="org.dps.servicelayer.dto.Cartset" >
		<property name="name" value="Test Cartset" />
		<property name="description" value="A Test Cartset" />
		<property name="filename" value="test_cartset" />
		<property name="allExecute" value="false" />
		<property name="allRead" value="false" />
		<property name="allWrite" value="true" />
		<property name="groupRead" value="true" />
		<property name="groupWrite" value="false" />
		<property name="groupExecute" value="true" />
		<property name="userExecute" value="true" />
		<property name="userRead" value="true" />
		<property name="userWrite" value="true" /> 
	</bean>
</beans>
